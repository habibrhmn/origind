<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passplz"
        android:layout_marginTop="10dp"
        android:id="@+id/showAvail"
        android:text="Blood Bank Available"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_alignParentRight="true"
        android:id="@+id/chagebtn"
        android:layout_below="@id/passplz"
        android:layout_marginTop="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passplz"
        android:hint="Enter the password to change"
        android:inputType="textPassword"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/chagebtn"
        android:text="Email Verified"
        android:gravity="center"
        android:id="@+id/verification"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listViewUser"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/verification"
        />

</RelativeLayout>